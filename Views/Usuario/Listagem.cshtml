@model List<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
} 

<div class="row">
    <div class="col-md-12">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Login</th>
                        <th>Senha</th>
                        <th>Operações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Usuario u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>
                            <td>@u.Senha</td>
                            <td><a href="/Usuario/Edicao/@u.Id">Editar</a></td>
                            <td><a href="/Usuario/Excluir/@u.Id">Excluir</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nenhum registro encontrado</p>
        }
    </div>
</div>